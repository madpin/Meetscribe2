<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow access to camera for screenshot functionality -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Allow access to microphone if needed -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- Allow network access -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow outgoing network connections -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Allow access to user selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow access to downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow access to pictures folder for screenshots -->
    <key>com.apple.security.assets.pictures.read-write</key>
    <true/>
    
    <!-- Allow JIT compilation if needed -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow DYLD environment variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Disable library validation for compatibility -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow accessibility features for global shortcuts -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
</dict>
</plist>
